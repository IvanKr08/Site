/* padding — внутри, margin — снаружи. Пора бы уже запомнить... */



body {
	margin: 0;
    background: url(gfx/jeans.gif);
}
* {
	color: white;
	font-family: "Courier New", monospace;
	image-rendering: pixelated; 
  /*  ^
      |
	На Android приводит к смешению двух шрифтов в одном тексте. Исправить позже.
	PS: Я в курсе, что Courier является проприетарным шрифтом Windows, и он отсутствует в открытых системах
 */

}



/* LINKS */
a:link, a:visited, a:link h2, a:visited h2 {
	color: #6666FF;
	text-decoration: underline;
}
a:hover, a:hover h2 {
	color: #FFFFFF;
	text-decoration: underline;
}
/* ===== */



/* BLOCK */
.maintable {
	margin: 16px auto;
	border: white double 4px;
	min-width: 720px;
	width: 75%;
	background: url(gfx/jeansdark.gif);
	border-collapse: collapse;
}
.menu, .main, .footer {
	border: white double 4px;
}
/* ===== */



/* MENU */
.menu span, .menu a {
	font-size: 30px;
	font-weight: bold;
	text-decoration: none;
}
.menu span {
	margin: 0 5%;
}
.menu {
	padding: 8px;
}
/* ==== */



/* TEXT */
.main h1 {
	margin: 0;
}
.main h2, .main h3, .main p {
	margin-bottom: 4px;
}
.hnarrow {
	margin-top: 0;
}
.nomargin {
	margin: 0;
}
/* ==== */



/* TABLES */
.stdtable th {
	text-align: left;
	font-size: 125%;
}
/* ====== */



/* PFAA */
.pfaal {
	float: left;
	margin: 0 8px 0 0;
}
.pfaar {
	float: right;
	margin: 0 0 0 8px;
}
.pfaal, .pfaar {
	font-size: 18px;
	font-weight: bold;
	width: 350px;
	text-align: center;
}
.pfaal hr, .pfaar hr {
	margin: 8px 0;
}
.pfaal img, .pfaar img {
	border: white solid 1px;
	margin: 8px;
}
/* ==== */



/* PHOTOS */
.photo img {
	margin: 8px auto;
	image-rendering: auto;
	border: white solid 1px;
	width: 90%;
}
.photo div {
	width: 95%;
}
.photo i {
	font-size: 18px;
	font-weight: bold;
}
/* ====== */



/* INFORMERS */
.footer img, .footer a {
	border: none;
}
.footer {
	padding: 8px;
}
/* ========= */





